<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".InsertShips">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introduce_coordinates"
        android:textSize="15sp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/ship_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/coordinate_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="100dp"
        android:inputType="number"
        android:hint="@string/coordinateX"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/coordinate_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="100dp"
        android:inputType="number"
        android:hint="@string/coordinateY"
        android:importantForAutofill="no" />

    <Spinner
        android:id="@+id/orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/already_boat_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_boat_alert"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:onClick="onOkClicked"/>

    <TextView
        android:id="@+id/ocean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:lineSpacingMultiplier="0.55" />

</LinearLayout>